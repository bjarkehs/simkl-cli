{
  "name": "simkl-cli",
  "version": "0.1.0",
  "description": "CLI for Simkl.com - TV & movie tracking",
  "type": "module",
  "exports": "./dist/cli.js",
  "bin": {
    "simkl": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target node",
    "build:binary": "bun build src/cli.ts --compile --outfile simkl",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "generate:types": "openapi-typescript openapi.json -o src/api/schema.d.ts",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build"
  },
  "keywords": [
    "simkl",
    "cli",
    "tv",
    "movies",
    "anime",
    "tracker"
  ],
  "author": "Bjarke SÃ¸ndergaard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bjarkehs/simkl-cli.git"
  },
  "homepage": "https://github.com/bjarkehs/simkl-cli#readme",
  "bugs": {
    "url": "https://github.com/bjarkehs/simkl-cli/issues"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "conf": "^15.0.2",
    "openapi-fetch": "^0.15.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.3.5",
    "apib2swagger": "^1.17.1",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.3"
  }
}
