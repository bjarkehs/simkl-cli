{
  "name": "simkl-cli",
  "version": "0.3.1",
  "description": "CLI for Simkl.com - TV, Anime & Movie tracking",
  "type": "module",
  "exports": "./dist/cli.js",
  "bin": {
    "simkl": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "scripts": {
    "dev": "bun run src/cli.ts",
    "build": "bun build src/cli.ts --outdir dist --target node",
    "build:binary": "bun build src/cli.ts --compile --outfile simkl",
    "generate:types": "openapi-typescript openapi.json -o src/generated/api-types.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run build"
  },
  "keywords": [
    "simkl",
    "cli",
    "tv",
    "movies",
    "anime",
    "tracker"
  ],
  "author": "Bjarke SÃ¸ndergaard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bjarkehs/simkl-cli.git"
  },
  "homepage": "https://github.com/bjarkehs/simkl-cli#readme",
  "bugs": {
    "url": "https://github.com/bjarkehs/simkl-cli/issues"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "conf": "^15.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "^1.3.5",
    "openapi-typescript": "^7.13.0",
    "typescript": "^5.9.3"
  }
}
